extends layout

block content
  .content
    .title
      h1= title
    hr
    form(method='POST' action='' enctype='multipart/form-data')
      .form-group
        label(for="firstName") First Name:
        input(type='text' name='firstName' value=user && user.firstName minlength='1')
      .form-group
        label(for='lastName') Last Name:
        input(type='text' name='lastName' value=user && user.lastName minlength='1')
      .form-group
        label(for="username") Email:
        input(type='email' name='username' value=user && user.username )
      .form-group
        label(for='password') Password:
        input(type='password' name='password' minlength='8')
      .form-group
        label(for='passwordConfirmation') Confirm Password:
        input(type='password' name='passwordConfirmation' minlength='8')
      .form-group
        label(for='picture') Profile Picture (can be changed later):
        input(type='file' name='picture' accept='.jpg' value = picture ? picture : null)
      button(type='submit') Sign Up!
    hr
    if errors && errors.length
      ul.errors
        each error in errors
          li!= error.msg