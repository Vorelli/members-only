doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='icon' type="image/x-icon" href='/favicon.ico')
  body
    .header
      .topHeader
        .homeName
          .title 
            .members Members
            .only Only
        .userArea
          if currentUser
            .signedInUser
              .profilePicture
                img(src="/images/" + currentUser.username + '.jpg', alt="Profile picture of " + currentUser.firstname + ' ' + currentUser.lastname)
              .userRightBlock
                .memberStatus= currentUser.isadmin ? 'Admin' : currentUser.ismember ? 'Member' : 'Nobody'
                .userName= currentUser.firstname + ' ' + currentUser.lastname
                .userSignOut
                  a(href='/messageboard/sign-out')= 'Sign out'
          else
            .signInOrUp
              a(href='/messageboard/sign-in') Sign in
              | #{' or '}
              a(href='/messageboard/sign-up') Sign up
      .bottomHeader
        .headerLinks
          .headerLeft
            a(href='/messageboard/') Home
          .headerRight
            a(href='/messageboard/post') Post
    block content
